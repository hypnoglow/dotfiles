{
  "title": "CapsLock Input Source Select",
  "rules": [
    {
      "description": "CapsLock -> EN, Shift+CapsLock -> RU",
      "manipulators": [
        {
          "from": {
            "key_code": "caps_lock",
            "modifiers": {}
          },
          "to": [
            {
              "modifiers": [],
              "select_input_source": {
                "input_source_id": "com.apple.keylayout.ABC"
              }
            }
          ],
          "type": "basic"
        },
        {
          "from": {
            "key_code": "caps_lock",
            "modifiers": {
              "mandatory": ["left_shift"]
            }
          },
          "to": [
            {
              "modifiers": [],
              "select_input_source": {
                "input_source_id": "com.apple.keylayout.Russian"
              }
            }
          ],
          "type": "basic"
        }
      ]
    }
  ]
}
