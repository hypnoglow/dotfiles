#!/bin/bash
#
# Clone git repository considering username/repo_name directory hierarcy.

trimSchemaAndSuffix() {
    path="$1"

    # strip scheme
    if [[ "$path" =~ ^(https?://) ]]; then
        path="${path#https://*}"
    fi

    if [[ "$path" =~ (.git)$ ]]; then
        path="${path%.*}"
    fi

    echo $path
}

main() {
    if [ $# -eq 0 ] || [ $# -gt 1 ]; then
        git clone "$@"
        exit $?
    fi

    url="$1"
    path="$(trimSchemaAndSuffix $url)"

    reponame="$(basename "${path}")"
    path="${path%/${reponame}}"

    namespace="${path##*/}"
    path="${path%/${namespace}}"
    if [ "$path" = "$namespace" ]; then
        namespace="${namespace##*:}"
        path="${path%:${namespace}}"
    fi

    hostname="${path##*@}"

    git clone "$url" "${HOME}/sources/${hostname}/${namespace}/${reponame}"
    echo cd "~/sources/${hostname}/${namespace}/${reponame}"
}

main "$@"
exit 0
