{
    //
    // General
    //
    "window.autoDetectColorScheme": false,
    "window.systemColorTheme": "dark",
    "window.nativeTabs": false,
    "workbench.colorTheme": "Shades of Purple",
    "workbench.iconTheme": "file-icons",
    "explorer.fileNesting.enabled": true,
    "explorer.fileNesting.patterns": {
        "go.mod": "go.sum"
    },
    "explorer.confirmDragAndDrop": false,
    "zenMode.fullScreen": false,
    //
    // Editor
    //
    "editor.fontSize": 14,
    "editor.fontFamily": "Jetbrains Mono, 'Fira Code', monospace",
    "editor.fontLigatures": true,
    "editor.rulers": [
        80,
        120
    ],
    "files.trimTrailingWhitespace": true,
    "files.trimFinalNewlines": true,
    "files.insertFinalNewline": true,
    //
    // Copilot
    //
    "github.copilot.enable": {
        "*": true,
        "plaintext": true,
        "markdown": true,
        "scminput": false,
        "yaml": true
    },
    "github.copilot.editor.enableAutoCompletions": true,
    //
    // Git
    //
    "git.allowForcePush": true,
    "git.autoStash": true,
    "git.confirmSync": false,
    "git.rebaseWhenSync": true,
    "git.supportCancellation": true,
    "git.enableSmartCommit": true,
    //
    // Go
    //
    "gopls": {
        "ui.semanticTokens": true,
        "formatting.local": ""
    },
    "go.inlayHints.constantValues": true,
    "go.gopath": "~/go",
    "go.lintTool": "golangci-lint",
    "go.lintFlags": [
        "--fast"
    ],
    "go.toolsManagement.autoUpdate": false,
    //
    // Other extensions
    //
    "task": {
        "outputTo": "terminal"
    },
    //
    // Unsorted
    //
    "[graphql]": {},
    "gitlab.duoCodeSuggestions.enabled": false,
    "gitlab.duoChat.enabled": false,
    "gitlab.duo.enabledWithoutGitlabProject": false,
    "gitlab.keybindingHints.enabled": false,
    "gitlab.duoCodeSuggestions.openTabsContext": false,
    "gitlab.real-timeSecurityScan.scanFileOnSave": false,
    "diffEditor.ignoreTrimWhitespace": true,
    "diffEditor.experimental.showMoves": true,
    "diffEditor.hideUnchangedRegions.enabled": true,
    "workbench.editor.enablePreview": true,
    "gitlens.views.commitDetails.files.layout": "tree",
    "gitlens.graph.minimap.enabled": false,
    "gitlens.plusFeatures.enabled": false,
    "gitlens.currentLine.enabled": false,
    "gitlens.codeLens.enabled": false,
    "git.confirmForcePush": false,
    "git.useEditorAsCommitInput": false,
    //////////////// OLD BELOW //////////////////////
    // Editor
    "editor.renderWhitespace": "boundary",
    "editor.renderControlCharacters": true,
    "editor.minimap.enabled": false,
    "window.zoomLevel": 0,
    // Explorer
    "explorer.openEditors.visible": 0,
    // Terminal
    "terminal.external.osxExec": "iTerm.app",
    "terminal.integrated.cursorBlinking": true,
    // Language-specific
    "[yaml]": {
        "editor.insertSpaces": true,
        "editor.tabSize": 2,
        "editor.autoIndent": "advanced"
    },
    "[terraform]": {
        "editor.defaultFormatter": "hashicorp.terraform",
        "editor.formatOnSave": true,
        "editor.formatOnSaveMode": "file"
    },
    "[terraform-vars]": {
        "editor.defaultFormatter": "hashicorp.terraform",
        "editor.formatOnSave": true,
        "editor.formatOnSaveMode": "file"
    },
    "[markdown]": {
        "editor.wordWrap": "off",
        "editor.quickSuggestions": {
            "comments": "off",
            "strings": "off",
            "other": "off"
        },
        "files.trimTrailingWhitespace": false,
    },
    "[rust]": {
        "editor.formatOnSave": true,
    },
    "[helm]": {
        "editor.tabSize": 2,
    },
    "vs-kubernetes": {
        "disable-linters": [
            "resource-limits"
        ],
        "vs-kubernetes.knownKubeconfigs": [
            "/home/hypnoglow/.kube/config"
        ],
        "vs-kubernetes.kubeconfig": "/Users/hypnoglow/.kube/config",
    },
    "[jinja]": {},
    // Miscellaneous
    "git.autofetch": true,
    "telemetry.enableTelemetry": false,
    "telemetry.enableCrashReporter": false,
    "workbench.tree.renderIndentGuides": "always",
    "workbench.tree.indent": 12,
    "files.autoGuessEncoding": true,
    "go.formatTool": "goimports",
    "go.useLanguageServer": true,
    "rust-client.enableMultiProjectSetup": true,
    "cSpell.userWords": [
        "asynqmon",
        "gitlab",
        "ICMP",
        "KUBE",
        "kubectl",
        "KUBERNETES",
        "platacard"
    ],
    "cSpell.enableFiletypes": [
        "!markdown",
        "!plaintext"
    ],
    "[dart]": {
        "editor.formatOnSave": true,
        "editor.formatOnType": true,
        "editor.rulers": [
            80
        ],
        "editor.selectionHighlight": false,
        "editor.suggest.snippetsPreventQuickSuggestions": false,
        "editor.suggestSelection": "first",
        "editor.tabCompletion": "onlySnippets",
        "editor.wordBasedSuggestions": "off"
    },
    "editor.unicodeHighlight.nonBasicASCII": false,
    "editor.inlineSuggest.enabled": true,
    "telemetry.telemetryLevel": "off",
    "editor.tabSize": 2,
    "[html]": {
        "editor.tabSize": 2
    },
    "gitlens.hovers.currentLine.over": "line",
    "gitlens.currentLine.enabled": false,
    "gitlens.codeLens.enabled": false,
    "gitlens.defaultDateFormat": null,
    "vsicons.dontShowNewVersionMessage": true,
    "gitlab.duoCodeSuggestions.enabled": false,
    "gitlab.duoChat.enabled": false,
    "gitlens.hovers.enabled": false,
}
