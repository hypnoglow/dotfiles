[user]
	name = Igor Zibarev
	email = zibarev.i@gmail.com
[core]
	editor = nvim
	eol = lf
	autocrlf = false
	quotepath = false
	excludesfile = ~/.gitexcludes
	#hooksPath = ~/.githooks
[init]
	defaultBranch = main
#[commit]
#	template = ~/.gitcommit
[fetch]
	# Remove local branches that were deleted remotely.
	prune = true
[grep]
	# Output line numbers on `git grep`.
	lineNumber = true
[diff]
	algorithm = histogram
[pull]
	# Prevent merge commits on pulls.
	rebase = true
[push]
	# Push only the current branch.
	default = simple
	# Assume '--set-upstream' on push.
	autoSetupRemote = true
[merge]
	conflictStyle = zdiff3
[rebase]
	autostash = true
	updateRefs = true
[pager]
	diff = delta
	show = delta
	log = delta
	reflog = delta
[interactive]
	diffFilter = delta --color-only
[color]
	ui = auto
[i18n]
	commitencoding = utf-8
	logoutputencoding = utf-8
[help]
	autocorrect = prompt
[alias]
	todo = "!git --no-pager diff -U0 main | \
		grep '^+.*TODO' | \
		sed 's/^+//' | \
		git --no-pager grep -nFf - 2> /dev/null"
	s = "!sh -c ' \
    	[ $GIT_PREFIX ] && cd $GIT_PREFIX; \
    	git status --short --branch $*; \
    	git --no-pager diff -U0 main | \
    	grep \"^+.*TODO\" | \
    	sed \"s/^+//\" | \
    	git --no-pager grep -nFf - 2> /dev/null' -"
	sw = "switch"
	swm = "switch main"
	pr = "pull --rebase"
[filter "lfs"]
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process

#
# External tools
#

[delta]
	line-numbers = true
	side-by-side = true

[ghq]
	root = ~/code
	root = ~/sources

