[user]
	name = Igor Zibarev
	email = hypnoglow@gmail.com
[core]
	editor = nvim
	eol = lf
	autocrlf = false
	quotepath = false
	excludesfile = ~/.gitexcludes
	#hooksPath = ~/.githooks
[init]
	defaultBranch = main
#[commit]
#	template = ~/.gitcommit
[branch]
	# Most recent branch first.
	sort = -committerdate
[tag]
	# Version-aware sorting.
	sort = -version:refname
[fetch]
	# Remove local branches that were deleted remotely.
	prune = true
	# Remove local tags that were deleted remotely.
	pruneTags = true
	# Fetch all remotes.
	all = true
[grep]
	# Output line numbers on `git grep`.
	lineNumber = true
[diff]
	# Best algorithm for diffs.
	algorithm = histogram
	# Separate color for moves and edits.
	colorMoved = true
	# Change a/b to i/w/c (index/working tree/commit).
	mnemonicPrefix = true
	renames = true
[pull]
	# Prevent merge commits on pulls.
	rebase = true
[push]
	# Push only the current branch.
	default = simple
	# Assume '--set-upstream' on push.
	autoSetupRemote = true
	# Push all tags, every time you push anything.
	; followTags = true
[merge]
	conflictStyle = zdiff3
[rebase]
	autostash = true
	# https://blog.gitbutler.com/git-autosquash/
	autosquash = true
	# Move all refs (branches) with the rebase.
	updateRefs = true
[rerere]
	# Record the before and after states of rebase conflicts.
	enabled = true
	# Automatically re-apply the resolutions if it sees them again.
	autoupdate = true
[pager]
	diff = delta
	show = delta
	log = delta
	reflog = delta
[interactive]
	diffFilter = delta --color-only
[color]
	# Just better looks.
	ui = auto
[i18n]
	commitencoding = utf-8
	logoutputencoding = utf-8
[help]
	autocorrect = prompt
[alias]
	todo = "!git --no-pager diff -U0 main | \
		grep '^+.*TODO' | \
		sed 's/^+//' | \
		git --no-pager grep -nFf - 2> /dev/null"
	s = "!sh -c ' \
    	[ $GIT_PREFIX ] && cd $GIT_PREFIX; \
    	git status --short --branch $*; \
    	git --no-pager diff -U0 main | \
    	grep \"^+.*TODO\" | \
    	sed \"s/^+//\" | \
    	git --no-pager grep -nFf - 2> /dev/null' -"
	sw = "switch"
	swm = "switch main"
	pr = "pull --rebase"
	fix = "!f() { \
		git status && \
		git add . && \
		git commit --amend --reset-author --no-edit && \
		git status ; \
	}; f"
	browse = "!f() { \
		open `git remote -v \
		| awk '/fetch/{print $2}' \
		| sed -Ee 's#(git@|git://)#http://#' -e 's@com:@com/@'` \
		| head -n1; \
	}; f"
	set-next-tag-patch = "!f() { \
		latest=$(git tag --sort=-version:refname | head -n1); \
		if [ -z \"$latest\" ]; then \
			echo \"No tags found\"; \
			exit 1; \
		fi; \
		major=$(echo $latest | cut -d. -f1 | sed 's/v//'); \
		minor=$(echo $latest | cut -d. -f2); \
		current_patch=$(echo $latest | cut -d. -f3); \
		next_patch=$((current_patch + 1)); \
		next_tag=\"v$major.$minor.$next_patch\"; \
		git tag $next_tag; \
		echo \"Created tag: $next_tag\"; \
	}; f"
	set-next-tag-minor = "!f() { \
		latest=$(git tag --sort=-version:refname | head -n1); \
		if [ -z \"$latest\" ]; then \
			echo \"No tags found\"; \
			exit 1; \
		fi; \
		major=$(echo $latest | cut -d. -f1 | sed 's/v//'); \
		current_minor=$(echo $latest | cut -d. -f2); \
		next_minor=$((current_minor + 1)); \
		next_tag=\"v$major.$next_minor.0\"; \
		git tag $next_tag; \
		echo \"Created tag: $next_tag\"; \
	}; f"
	# Creates a worktree in a sibling directory named <repo>-<prefix>,
	# with a new branch from the argument.
	# Usage: git worktree-switch ABC-123/feature
	# Result: git worktree add ./../<repo>-ABC-123 -b ABC-123/feature
	worktree-switch = "!f() { \
		branch=\"$1\"; \
		prefix=$(echo \"$branch\" | cut -d'/' -f1); \
		dirName=$(basename \"$(git rev-parse --show-toplevel)\"); \
		git worktree add \"./../${dirName}-${prefix}\" -b \"$branch\"; \
	}; f"
[filter "lfs"]
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process

#
# External tools
#

[delta]
	line-numbers = true
	side-by-side = true

[ghq]
	root = ~/Developer
	root = ~/code
	root = ~/sources
	root = ~/Developer

